{
  "name": "klaudkod",
  "version": "0.1.0",
  "description": "Claude Code-like CLI tool",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "klaudkod": "dist/index.js"
  },
  "scripts": {
    "build": "esbuild src/index.tsx --bundle --platform=node --format=esm --outfile=dist/index.js --external:react --external:ink --external:ws",
    "dev": "node --import tsx src/index.tsx",
    "start": "node dist/index.js"
  },
  "keywords": [
    "cli",
    "ai",
    "coding",
    "assistant"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.6.2",
    "cli-highlight": "^2.1.11",
    "ink": "^6.6.0",
    "ink-text-input": "^6.0.0",
    "marked": "^15.0.0",
    "marked-terminal": "^7.3.0",
    "react": "^19.2.3",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/ws": "^8.18.1",
    "esbuild": "^0.27.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
